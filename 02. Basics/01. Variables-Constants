    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <?php 
    $characterName = "Harold";
    const AGE = 25;
    define("CITY", "COL");
        echo"<h1> My website $characterName </h1>";
        echo AGE;
    ?>
</body>
</html>